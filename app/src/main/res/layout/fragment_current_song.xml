<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/red"
    tools:context="com.fragment.currentSongFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgNP"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@color/black"
        android:src="@drawable/smlogo" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/nextBtnNP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/red"
        app:icon="@drawable/ic_baseline_arrow_forward_ios_24"
        app:iconSize="30dp"
        app:iconTint="@color/black" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/playpauseBtnNP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="5dp"
        android:layout_toStartOf="@+id/nextBtnNP"
        android:backgroundTint="@color/red"
        app:icon="@drawable/ic_baseline_play_arrow_24"
        app:iconSize="40dp"
        app:iconTint="@color/black" />

    <TextView
        android:id="@+id/nameNP"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toStartOf="@+id/playpauseBtnNP"
        android:layout_toEndOf="@+id/imgNP"
        android:gravity="center"
        android:text="Song Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"/>
</RelativeLayout>